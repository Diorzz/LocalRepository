<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Content="Show"></Button>
            <TextBox Margin="3" Text="{Binding Value1}"></TextBox>
            <TextBox Margin="3" Text="{Binding Value2}"></TextBox>
            <TextBox Margin="3" Text="{Binding Result}"></TextBox>
            <Button Content="Add" Command="{Binding AddCommand}"></Button>
        </StackPanel>
    </Grid>
</Window>
